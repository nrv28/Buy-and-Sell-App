<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Olx"
        tools:targetApi="31">

        <activity
            android:name=".activities.StationaryActivity"
            android:exported="false"
            android:label="@string/title_activity_stationary"
            android:theme="@style/Theme.Olx" />
        <activity
            android:name=".activities.BuyActivity"
            android:exported="false"
            android:label="@string/title_activity_buy"
            android:theme="@style/Theme.Olx" />
        <activity
            android:name=".activities.Sellactivity"
            android:exported="false"
            android:label="@string/title_activity_sellactivity"
            android:theme="@style/Theme.Olx" />
        <activity
            android:name=".activities.BSActivity"
            android:exported="false"
            android:label="@string/title_activity_bsactivity"
            android:theme="@style/Theme.Olx" />

        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Olx" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Olx" />

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>